#!/bin/sh
name="jupyter"
config="/work/config/$name"

if [ ! -d "$config" ] || [! -f "$config/jnl.py" ]; then
    echo "init $name configure"
    mkdir -p $config
    cp -a /build/config/$name/jnl.py $config
fi

mkdir -p $config/lab/user-settings $config/lab/workspaces
exec /usr/local/bin/jupyter-lab --config $config/jnl.py
